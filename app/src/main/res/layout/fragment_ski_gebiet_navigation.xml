<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dhbw.studienarbeit.skiapp.SkiGebietNavigationFragment">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:id="@+id/RoutingList"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/spStartLifte"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigiere"
        android:id="@+id/bNavigation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spStartLifte"
        android:spinnerMode="dropdown"
        android:prompt="@string/StartLifte"
        android:layout_below="@+id/tvLifteStart"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bNavigation" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spEndeLifte"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/tvLifteEnde"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/bNavigation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lift Start:"
        android:id="@+id/tvLifteStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lift Ende:"
        android:id="@+id/tvLifteEnde"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/bNavigation" />

</RelativeLayout>
