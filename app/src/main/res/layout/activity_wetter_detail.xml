<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dhbw.studienarbeit.skiapp.WetterDetailActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iWindrichtung"
        android:src="@drawable/windrichtung"
        android:layout_above="@+id/iWindstaerke"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iWindstaerke"
        android:src="@drawable/windstaerke"
        android:layout_above="@+id/iSonnenaufgang"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iSonnenaufgang"
        android:src="@drawable/sonnenaufgang"
        android:layout_above="@+id/iSonnenuntergang"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iSonnenuntergang"
        android:src="@drawable/sonnenuntergang"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iIcon"
        android:layout_above="@+id/iWindrichtung"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tTemp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tWindrichtung"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tWindrichtung"
        android:layout_alignBottom="@+id/iWindrichtung"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tWindstaerke"
        android:layout_alignBottom="@+id/iWindstaerke"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tSonnenaufgang"
        android:layout_alignBottom="@+id/iSonnenaufgang"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tSonnenuntergang"
        android:layout_alignBottom="@+id/iSonnenuntergang"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

</RelativeLayout>
